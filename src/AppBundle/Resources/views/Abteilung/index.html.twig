                    <li>
                        <a class="btn btn-default"  href="{{ path('abteilung_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-default"  href="{{ path('abteilung_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn btn-default" href="{{ path('abteilung_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
