{% extends '::layout.html.twig' %}

{% block title -%} Maschine {% endblock %}
{% block topbutton -%}
        <a href="{{ path('maschinen_details',{ 'maschine_id' :maschine.id }) }}" class="btn btn-default">offene Störungen</a>
        <a href="{{ path('maschinen_new',{ 'abteilung_id' :maschine.abteilung.id }) }}" class="btn btn-default">abgeschlossene Störungen</a>
        <a href="{{ path('maschinen_new',{ 'abteilung_id' :maschine.abteilung.id }) }}" class="btn btn-default">Grafik</a>
{% endblock %}
{% block content -%}
    <table class="table table-striped">
            <tbody>
            <tr>
                <th class="field-label col-xs-2 active">Name</td>
                <td>{{ maschine.name }}</td>

            </tr>
            <tr>
                <th>Seriennummer</th>
                <td>{{ maschine.seriennummer }}</td>
            </tr>
            <tr>
                <th>Bild</th>
                <td>
                    {% if maschine.bildDateiname %}
                        <img src="{{ vich_uploader_asset(maschine, 'bild') | imagine_filter('view')}}" alt="{{ maschine.name }}" />
                    {% else %}
                        kein bild
                    {% endif %}
                </td>
            </tr>

        </tbody>
    </table>
    <a class="btn btn-default"
       href="{{ path('maschinen_index',{'abteilung':maschine.abteilung.id}) }}">
        Zurück zur Liste
    </a>
</div>
{% endblock %}
