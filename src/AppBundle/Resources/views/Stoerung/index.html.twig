{% extends '::layout.html.twig' %}

{% block title -%} Stoerungen {% endblock %}
{% block content -%}
    <table class="table-striped table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ststart</th>
                <th>Stend</th>
                <th>Bemerkungen</th>
                <th>Massnahmen</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('stoerung_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.stStart %}{{ entity.stStart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.stEnd %}{{ entity.stEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.bemerkungen }}</td>
                <td>{{ entity.massnahmen }}</td>
                <td>
                <ul class="record_actions">
                    <li>
                        <a class="btn btn-default"  href="{{ path('stoerung_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-default"  href="{{ path('stoerung_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn btn-default" href="{{ path('stoerung_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
